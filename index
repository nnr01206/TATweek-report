    <script>
        // 廣告素材對比圖 (CTR)
        const ctxCtr = document.getElementById('ctrChart').getContext('2d');
        new Chart(ctxCtr, {
            type: 'bar',
            data: {
                labels: ['Android 純圖組', '有影片測試組', '產業平均參考'],
                datasets: [{
                    label: '點擊率 (CTR %)',
                    data: [9.14, 3.2, 1.5],
                    backgroundColor: ['#38bdf8', '#334155', '#475569'],
                    borderRadius: 5
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true, grid: { color: '#334155' } } }
            }
        });

        // 漏斗診斷圖
        const ctxFunnel = document.getElementById('funnelChart').getContext('2d');
        new Chart(ctxFunnel, {
            type: 'line',
            data: {
                labels: ['廣告曝光', '點擊進站', '加入購物車', '完成購買'],
                datasets: [{
                    label: '用戶流失曲線',
                    data: [100, 9.14, 2.5, 0.5], // 2.5 和 0.5 為預估/測試參考值
                    borderColor: '#f59e0b',
                    backgroundColor: 'rgba(245, 158, 11, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: { y: { display: false } }
            }
        });
    </script>
