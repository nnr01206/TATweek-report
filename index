    <script>
        // 確保 DOM 載入後再繪圖
        window.onload = function() {
            // 圖表一：素材對比
            const ctx1 = document.getElementById('barChart').getContext('2d');
            new Chart(ctx1, {
                type: 'bar',
                data: {
                    labels: ['Android 純圖組', '有影片組', '平均'],
                    datasets: [{
                        label: '點擊率 (CTR %)',
                        data: [9.14, 3.2, 1.5],
                        backgroundColor: ['#38bdf8', '#334155', '#475569'],
                        borderRadius: 6
                    }]
                },
                options: { responsive: true, plugins: { legend: { display: false } } }
            });

            // 圖表二：漏斗診斷
            const ctx2 = document.getElementById('lineChart').getContext('2d');
            new Chart(ctx2, {
                type: 'line',
                data: {
                    labels: ['曝光', '點擊進站', '加入購物車', '購買'],
                    datasets: [{
                        label: '流失率分析',
                        data: [100, 9.14, 4, 1],
                        borderColor: '#38bdf8',
                        tension: 0.4,
                        fill: false
                    }]
                },
                options: { responsive: true, plugins: { legend: { display: false } } }
            });
        };
    </script>
